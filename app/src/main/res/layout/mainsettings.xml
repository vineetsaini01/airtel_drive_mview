<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <TextView
            android:id="@+id/sendstateinterval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send State to Server every(in sec)"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:layout_weight=".5"

            />

        <EditText
            android:id="@+id/updateintervaltxt"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:singleLine="true"
            android:inputType="numberSigned"
            android:focusable="true"
            android:textColor="#000000"
            style="@style/editviewSecond"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/sendstateinterval"
            android:layout_weight="1.5"
            />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <TextView
            android:id="@+id/dashboardupdateinterval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dashboard Update Interval(in sec)"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:layout_weight="1"

            />

        <EditText
            android:id="@+id/dashboardupdateinterval_txt"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:singleLine="true"
            android:inputType="numberSigned"
            android:focusable="true"
            android:textColor="#000000"

            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/dashboardupdateinterval"
            style="@style/editviewSecond"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <TextView
            android:id="@+id/youtubevideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Youtube url"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:layout_weight=".2"

            />

        <EditText
            android:id="@+id/youtubevideo_txt"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:singleLine="true"
            android:textCursorDrawable="@null"
            android:focusable="true"
            android:textColor="#000000"

            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/youtubevideo"
            style="@style/editviewSecond"
            android:layout_weight="1.8"
            />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <TextView
            android:id="@+id/calllogs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Write Call Logs"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:layout_weight="1"
            />

        <ToggleButton
            android:id="@+id/calllogstoggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/calllogs"
            android:layout_weight="1"

            />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <TextView
            android:id="@+id/min_gsm_signal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Min GSM Signal strength when call is counted dropped"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:layout_weight=".5"

            />

        <EditText
            android:id="@+id/min_gsm_signal_txt"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"

            android:inputType="numberSigned"
            android:focusable="true"
            android:textColor="#000000"
            style="@style/editviewSecond"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/min_gsm_signal"
            android:layout_weight="1.5"

            />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <TextView
            android:id="@+id/stopservice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Background Service"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:layout_weight="1"
            />

        <ToggleButton
            android:id="@+id/servicetoggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/stopservice"
            android:layout_weight="1"
            />

    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/saveBtn"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="#c72c2c"
        android:textColor="#FFFFFF"

        />
</LinearLayout>