<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="4dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                >

                <TextView
                    android:id="@+id/sendstateinterval"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Send State to Server every(in sec)"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:textColor="#000000"
                    android:layout_weight="1.5"

                    />

                <EditText
                    android:id="@+id/updateintervaltxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:singleLine="true"
                    android:inputType="numberSigned"
                    android:focusable="true"
                    android:textColor="@color/lightgrey"
                   android:background="#ffffff"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/sendstateinterval"
                    android:layout_weight=".5"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/separater_height"
                android:background="@color/lightgrey"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"/>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/dashboardupdateinterval"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Dashboard Update Interval(in sec)"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:textColor="#000000"
                    android:layout_weight="1.5"

                    />

                <EditText
                    android:id="@+id/dashboardupdateinterval_txt"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:singleLine="true"
                    android:inputType="numberSigned"
                    android:focusable="true"
                    android:textColor="#000000"

                    android:layout_marginTop="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/dashboardupdateinterval"
                    style="@style/editviewSecond"
                    android:layout_weight="0.5"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/separater_height"
                android:background="@color/lightgrey"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                />


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:gravity="center"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">

                <TextView
                    android:id="@+id/min_gsm_signal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Min GSM Signal strength when call is counted dropped"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:textColor="#000000"
                    android:layout_weight="1.5"

                    />

                <EditText
                    android:id="@+id/min_gsm_signal_txt"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium"

                    android:inputType="numberSigned"
                    android:focusable="true"
                    android:textColor="#000000"
                    style="@style/editviewSecond"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/min_gsm_signal"
                    android:layout_weight=".5"

                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/separater_height"
                android:background="@color/lightgrey"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                />




            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:gravity="center"
                android:paddingTop="3dp"
                android:paddingBottom="3dp">

                <TextView
                    android:id="@+id/calllogs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Write Call Logs"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:textColor="#000000"
                    android:layout_weight="1.5"
                    />

                <ToggleButton
                    android:id="@+id/calllogstoggle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/calllogs"
                    android:layout_weight="0.5"
                    android:textOff=""
                    android:textOn=""
                    android:background="@drawable/toggle_checked"


                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/separater_height"
                android:background="@color/lightgrey"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:gravity="center"
                android:paddingTop="3dp"
                android:paddingBottom="3dp">

                <TextView
                    android:id="@+id/stopservice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Background Service"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:textColor="#000000"
                    android:layout_weight="1.5"
                    />

                <ToggleButton
                    android:id="@+id/servicetoggle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/stopservice"
                    android:background="@drawable/toggle_checked"
                    android:textOff=""
                    android:textOn=""
                    android:layout_weight="0.5"
                    />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/separater_height"
                android:background="@color/lightgrey"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                />


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="2"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                >

                <TextView
                    android:id="@+id/youtubevideo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Youtube url"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:textColor="#000000"
                    android:layout_weight="0.5"

                    />

                <EditText
                    android:id="@+id/youtubevideo_txt"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:singleLine="true"
                    android:textCursorDrawable="@null"
                    android:focusable="true"
                    android:textColor="#000000"

                    android:layout_marginTop="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/youtubevideo"
                    style="@style/editviewSecond"
                    android:layout_weight="1.5"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/separater_height"
                android:background="@color/lightgrey"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Save"
                android:id="@+id/saveBtn"
                android:layout_marginTop="80dp"
                android:layout_gravity="center|bottom"
                android:background="@drawable/btn_bg"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="10dp"



                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>