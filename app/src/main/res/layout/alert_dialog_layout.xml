<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView android:layout_width="@dimen/three_hundred_dp"

        app:cardBackgroundColor="@color/white"
        android:layout_marginLeft="@dimen/five_dp"
        android:layout_marginRight="@dimen/five_dp"
        android:layout_marginBottom="@dimen/fifteen_dp"
        app:cardCornerRadius="@dimen/twenty_dp"
        android:elevation="@dimen/ten_dp"
        app:cardPreventCornerOverlap="false"

        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleIv"
        android:textColor="@color/black"
        android:text=""
        android:textSize="@dimen/seventeen_sp"
        android:padding="@dimen/five_dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/descTv"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:padding="@dimen/ten_dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:backgroundTint="@color/focus_tint"
        android:theme="@style/EditTextTheme"
        android:textColorHint="@color/cpb_grey"
        android:visibility="gone"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/optionsRV"
        android:layout_marginTop="@dimen/ten_dp"
        android:padding="@dimen/ten_dp"/>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/buttonsLayout"
    android:layout_gravity="center"
    android:layout_margin="@dimen/ten_dp"
    android:gravity="center">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/fourty_dp"
android:visibility="gone"
        android:text="Done"
        android:textSize="@dimen/sixteen_sp"
        android:background="@drawable/btn_bg"
        android:id="@+id/doneBtn"
        android:layout_gravity="center"
        android:textColor="@color/white"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="@dimen/fourty_dp"
android:layout_weight="0.5"
        android:text="Yes"
        android:textSize="@dimen/twelve_sp"
        android:background="@drawable/btn_bg"
        android:id="@+id/okBtn"
        android:gravity="center"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="@dimen/fourty_dp"
        android:text="No"
        android:gravity="center"
        android:textSize="@dimen/twelve_sp"
        android:textAllCaps="false"
        android:background="@drawable/btn_bg"
        android:id="@+id/cancelBtn"
        android:layout_marginStart="@dimen/ten_dp"
        android:layout_gravity="center"
        android:textColor="@color/white"/>

</LinearLayout>
</LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>