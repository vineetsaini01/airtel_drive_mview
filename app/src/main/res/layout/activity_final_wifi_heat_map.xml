                            android:layout_weight="0.25"
                            android:layout_width="0dp"
                            android:textColor="@color/darkgrey"
                            android:textSize="@dimen/tensp"
                            android:ellipsize="end"
                            android:layout_marginLeft="@dimen/column_leftmargin"
                            android:maxLines="1"
                            >
                        </TextView>

