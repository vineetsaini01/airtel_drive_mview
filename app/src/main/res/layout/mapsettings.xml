<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <TextView
            android:id="@+id/updateinterval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Interval(in seconds)"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:layout_weight="1"

            />

        <EditText
            android:id="@+id/updateintervaltxt"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:singleLine="true"
            android:inputType="numberSigned"
            android:focusable="true"
            android:textColor="#000000"
            style="@style/editviewSecond"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/updateinterval"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <TextView
            android:id="@+id/fastestinterval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fastest Interval(in seconds)"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:layout_weight="1"

            />

        <EditText
            android:id="@+id/fastestintervaltxt"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:singleLine="true"
            android:inputType="numberSigned"
            android:focusable="true"
            android:textColor="#000000"

            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/fastestinterval"
            style="@style/editviewSecond"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <TextView
            android:id="@+id/displacment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smallest Displacment (in meters)"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:layout_weight="1"

            />

        <EditText
            android:id="@+id/displacmenttxt"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:singleLine="true"
            android:inputType="numberSigned"
            android:focusable="true"
            android:textColor="#000000"

            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/displacment"
            style="@style/editviewSecond"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <TextView
            android:id="@+id/markerplot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Display Markers(On Start Test)"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:layout_weight="1"

            />

        <ToggleButton
            android:id="@+id/markerplottoggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/markerplot"
            android:layout_weight="1"

            />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <TextView
            android:id="@+id/marker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plot Markers after every x meters"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:layout_weight="1"

            />

        <EditText
            android:id="@+id/markertxt"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:singleLine="true"
            android:inputType="numberSigned"
            android:focusable="true"
            android:textColor="#000000"
            style="@style/editviewSecond"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/marker"
            android:layout_weight="1"

            />

    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/saveBtn"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="#c72c2c"
        android:textColor="#FFFFFF"
        />

    <TextView
        android:id="@+id/legends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marker Legends"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="#87CEFA"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
android:layout_marginLeft="10dp"
        />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_call"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        >
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            >
            <ImageView
                android:id="@+id/google_map_marker_blue"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:src="@drawable/google_map_marker_blue"
                />
            <TextView
                android:id="@+id/blue_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2G"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:background="#C0C0C0"
                android:textColor="#000000"


                />
        </LinearLayout>
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            >
            <ImageView
                android:id="@+id/purple"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:src="@drawable/google_map_marker_purple"
                />
            <TextView
                android:id="@+id/purpletxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3G"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:background="#C0C0C0"
                android:textColor="#000000"


                />
        </LinearLayout>
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            >
            <ImageView
                android:id="@+id/red"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:src="@drawable/google_map_marker_orange"
                />
            <TextView
                android:id="@+id/redtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4G"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:background="#C0C0C0"
                android:textColor="#000000"


                />
        </LinearLayout>
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            >
            <ImageView
                android:id="@+id/yellow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:src="@drawable/google_map_marker_yellow"
                android:layout_toRightOf="@+id/call_txt"/>
            <TextView
                android:id="@+id/yellowtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NS"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:background="#C0C0C0"
                android:textColor="#000000"


                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>