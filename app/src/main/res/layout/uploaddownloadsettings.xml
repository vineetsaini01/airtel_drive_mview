<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/my_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Download Settings"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separater_height"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:background="@color/lightgrey" />



    <TextView
        android:id="@+id/my_label1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="URL to download"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"


        android:textColor="#000000"
        />


    <EditText
        android:id="@+id/my_downloadurl"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:singleLine="true"
        android:inputType="text"
        android:focusable="true"
        android:textColor="#000000"
       android:layout_margin="10dp"
        style="@style/editviewSecond"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separater_height"
        android:background="@color/lightgrey"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"/>
    <TextView
        android:id="@+id/my_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Settings"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:textStyle="bold"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separater_height"
        android:background="@color/lightgrey"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">
    <TextView
        android:id="@+id/my_server"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="FTP Server"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginLeft="10dp"

        android:textColor="#000000"
        android:layout_weight="1"
        />

    <EditText
        android:id="@+id/my_ftpserverurl"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:singleLine="true"
        android:inputType="text"
        android:focusable="true"
        android:textColor="#000000"
        style="@style/editviewSecond"


        android:layout_marginRight="10dp"

        android:layout_weight="1"
        />
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separater_height"
        android:background="@color/lightgrey"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"/>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
       >

        <TextView
            android:id="@+id/my_ftplabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="FTP User"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:textColor="#000000"
            android:layout_weight="1"

            />

        <EditText
            android:id="@+id/my_ftpusername"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:singleLine="true"
            android:inputType="text"
            android:focusable="true"
            android:textColor="#000000"


            android:layout_marginRight="10dp"

            android:layout_weight="1"
            style="@style/editviewSecond"

            />

        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separater_height"
        android:background="@color/lightgrey"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"/>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">

        <TextView
            android:id="@+id/my_ftppwdlabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="FTP Password"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginLeft="10dp"

            android:textColor="#000000"
            android:layout_weight="1"

            />

        <EditText
            android:id="@+id/my_ftppwd"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:singleLine="true"
            android:inputType="text"
            android:focusable="true"
            android:textColor="#000000"


            android:layout_marginRight="10dp"
            android:password="true"

            android:layout_weight="1"
            style="@style/editviewSecond"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separater_height"
        android:background="@color/lightgrey"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"/>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">

        <TextView
            android:id="@+id/my_ftpdir"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Upload Directory"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginLeft="10dp"

            android:textColor="#000000"
            android:layout_weight="1"

            />

        <EditText
            android:id="@+id/my_ftpdirtxt"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:singleLine="true"
            android:inputType="text"
            android:focusable="true"
            android:textColor="#000000"


            android:layout_marginRight="10dp"

            android:layout_weight="1"
            style="@style/editviewSecond"

            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separater_height"
        android:background="@color/lightgrey"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"/>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Save"
        android:id="@+id/saveBtn"
       android:layout_marginTop="75dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center|bottom"
        android:background="@drawable/btn_bg"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="15dp"


        />

</LinearLayout>