<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/ten_dp">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
         android:id="@+id/gridLayout"
            android:columnCount="2"
            android:orientation="vertical"
            android:rowCount="2">
            <androidx.cardview.widget.CardView
                android:layout_height="@dimen/one_hundred_fifty"
                android:layout_width="@dimen/one_hundred_fifty"
                app:cardCornerRadius="@dimen/ten_dp"
                android:id="@+id/webSpeedTest"
                android:layout_margin="@dimen/ten_dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Web Speed Test"
                        android:theme="@style/CardViewTextTheme"
                        android:textColor="@color/black"

                        />
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/sixty_dp"
                        android:layout_height="@dimen/sixty_dp"
                        style="@style/ImageCardTheme">
                        <ImageView
                            android:layout_width="@dimen/thirtydp"
                            android:layout_height="@dimen/thirtydp"
                            android:src="@drawable/ic_web_speed"
                            android:layout_gravity="center"

                            />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_height="@dimen/one_hundred_fifty"
                android:layout_width="@dimen/one_hundred_fifty"
                app:cardCornerRadius="@dimen/ten_dp"
                android:id="@+id/downlaodTest"
                android:layout_margin="@dimen/ten_dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Speed test"
                        android:theme="@style/CardViewTextTheme"
                        android:textColor="@color/black"
                        />
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/sixty_dp"
                        android:layout_height="@dimen/sixty_dp"

                        style="@style/ImageCardTheme">
                        <ImageView
                            android:layout_width="@dimen/thirtydp"
                            android:layout_height="@dimen/thirtydp"
                            android:src="@drawable/ic_download"

                            android:layout_gravity="center"

                            />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_height="@dimen/one_hundred_fifty"
                android:layout_width="@dimen/one_hundred_fifty"
                app:cardCornerRadius="@dimen/ten_dp"
                android:id="@+id/videoStreamTest"
                android:layout_margin="@dimen/ten_dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Video Stream Test"
                        android:theme="@style/CardViewTextTheme"
                        android:textColor="@color/black"
                        />
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/sixty_dp"
                        android:layout_height="@dimen/sixty_dp"
                        style="@style/ImageCardTheme"
                        >
                        <ImageView
                            android:layout_width="@dimen/thirtydp"
                            android:layout_height="@dimen/thirtydp"
                            android:src="@drawable/ic_video_stream"
                            android:layout_gravity="center"

                            />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_height="@dimen/one_hundred_fifty"
                android:layout_width="@dimen/one_hundred_fifty"
                app:cardCornerRadius="@dimen/ten_dp"
                android:visibility="gone"
                android:id="@+id/uploadTest"
                android:layout_margin="@dimen/ten_dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload"
                        android:theme="@style/CardViewTextTheme"
                        android:textColor="@color/black"
                        />
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/sixty_dp"
                        android:layout_height="@dimen/sixty_dp"
                        style="@style/ImageCardTheme">
                        <ImageView
                            android:layout_width="@dimen/thirtydp"
                            android:layout_height="@dimen/thirtydp"
                            android:src="@drawable/ic_upload"
                            android:layout_gravity="center"

                            />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </GridLayout>

    </LinearLayout>
</layout>