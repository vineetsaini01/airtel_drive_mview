<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:padding="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:gravity="center"
            android:text="VideoTest Result"
            android:textColor="@color/app_theme"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:gravity="center"
            android:text="Your test has been successfully executed!"
            android:textColor="@color/textColor"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/app_theme"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:padding="2dp"
            android:textSize="16sp"
            android:id="@+id/finalResult"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/res"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="3dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="3dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="Total Video Duration(in sec)"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textSize="@dimen/text"
               />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:id="@+id/vid_dur"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="3dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="Number Of Buffering"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textSize="@dimen/text"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:id="@+id/buffering_no"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="3dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="Total Buffering Time(in ms)"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textSize="@dimen/text"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:id="@+id/buffer_time"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="3dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="Total Play Time(in sec)"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textSize="@dimen/text"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:id="@+id/playtime"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Do you want to report this back to your operator?"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:gravity="start"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fourty_dp"
                android:layout_weight="0.2"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:text="YES"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_bg"
                    android:id="@+id/yes"
                    android:layout_marginRight="@dimen/ten_dp"
                    android:textColor="@color/white"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:text="No"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_bg"
                    android:id="@+id/no"/>
            </LinearLayout>

        </LinearLayout>





    </LinearLayout>


</LinearLayout>