<?xml version="1.0" encoding="utf-8"?>


<androidx.core.widget.NestedScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="80dp">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"
            android:paddingLeft="10dp"
            android:gravity="center"
            android:layout_weight="0.1"
            />


        <!--..............4g.................-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/charts_4g"
            android:orientation="vertical"
            android:visibility="gone">




        <com.github.mikephil.charting.charts.LineChart
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/rsrp_4gChart"
            android:layout_marginBottom="20dp"


            />

        <com.github.mikephil.charting.charts.LineChart
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/snr_4gChart"
            android:layout_marginBottom="20dp"


            />
        <com.github.mikephil.charting.charts.LineChart
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/throughput_4gChart"
            android:layout_marginBottom="20dp"


            />
            <com.github.mikephil.charting.charts.LineChart
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/throughputuplink_4gChart"
                android:layout_marginBottom="20dp"


                />
        </LinearLayout>
        <!--..............3g.................-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/charts_3g"
        android:orientation="vertical"
        android:visibility="gone">

    <com.github.mikephil.charting.charts.LineChart
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/rscp_3gChart"
            android:layout_marginBottom="20dp"

            />
        <com.github.mikephil.charting.charts.LineChart
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/ecno_3gChart"
            android:layout_marginBottom="20dp"

            />

        <com.github.mikephil.charting.charts.LineChart
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/throughput_3gChart"
            android:layout_marginBottom="20dp"

            />
        <com.github.mikephil.charting.charts.LineChart
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/throughputUplink_3gChart"
            android:layout_marginBottom="20dp"

            />
    </LinearLayout>
        <!--..............2g.................-->



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/charts_2g"
        android:orientation="vertical"
        android:visibility="gone">

    <com.github.mikephil.charting.charts.LineChart
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/rxqual_2gChart"
            android:layout_marginBottom="20dp"

            />
        <com.github.mikephil.charting.charts.LineChart
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/rxlevel_2gChart"
            android:layout_marginBottom="20dp"

            />
    </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
